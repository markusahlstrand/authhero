{
  "name": "authhero",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "homepage": "https://authhero.net",
  "repository": {
    "type": "git",
    "url": "https://github.com/markusahlstrand/authhero"
  },
  "version": "4.28.0",
  "files": [
    "dist"
  ],
  "main": "dist/authhero.cjs",
  "module": "dist/authhero.mjs",
  "types": "dist/authhero.d.ts",
  "exports": {
    ".": {
      "types": "./dist/authhero.d.ts",
      "require": "./dist/authhero.cjs",
      "import": "./dist/authhero.mjs"
    },
    "./styles": {
      "import": "./dist/tailwind.css",
      "require": "./dist/tailwind.css"
    }
  },
  "scripts": {
    "dev": "bun --watch src/bun.ts",
    "build": "pnpm build:tailwind && pnpm build:client && tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts && pnpm build:assets",
    "build:tailwind": "node build-tailwind.js",
    "build:client": "vite build --mode client && node build-client.js",
    "build:assets": "node build-assets.js",
    "build:vite": "vite build",
    "start": "pnpm build && node dist/index.js",
    "test": "vitest run",
    "pull-translations": "i18nexus pull --path ./src/locales",
    "watch-translations": "i18nexus listen --path ./src/locales",
    "storybook": "pnpm build:tailwind && storybook dev -p 6006",
    "build-storybook": "pnpm build:tailwind && storybook build -o ../../apps/docs/public/storybook"
  },
  "devDependencies": {
    "@ape-egg/tailwind-rows-columns": "^1.0.2",
    "@authhero/kysely-adapter": "workspace:*",
    "@authhero/widget": "workspace:*",
    "@hono/zod-openapi": "^0.19.10",
    "@storybook/react": "^10.0.4",
    "@storybook/react-vite": "^10.0.4",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/sanitize-html": "^2.16.0",
    "autoprefixer": "10.4.21",
    "better-sqlite3": "^12.4.1",
    "cssnano": "7.1.2",
    "dts-bundle-generator": "^9.5.1",
    "fast-xml-parser": "^5.3.1",
    "hono": "^4.10.4",
    "i18nexus-cli": "^3.8.2",
    "kysely": "^0.28.8",
    "postcss": "8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "storybook": "^10.0.4",
    "tailwindcss": "3.4.18",
    "typescript": "^5.9.3",
    "vite": "^7.2.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.7"
  },
  "dependencies": {
    "@authhero/adapter-interfaces": "workspace:*",
    "@authhero/saml": "workspace:*",
    "@peculiar/x509": "^1.14.0",
    "arctic": "3.7.0",
    "bcryptjs": "^3.0.3",
    "classnames": "^2.5.1",
    "cookie": "^1.1.1",
    "i18next": "^25.6.0",
    "libphonenumber-js": "^1.12.25",
    "nanoid": "^5.1.6",
    "oslo": "^1.2.1",
    "ulid": "^2.3.0",
    "sanitize-html": "^2.17.0",
    "xstate": "^5.25.0"
  },
  "peerDependencies": {
    "@authhero/widget": "^0.1.0",
    "@hono/zod-openapi": "^0.19.2",
    "hono": "^4.8.7",
    "ua-parser-js": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "@authhero/widget": {
      "optional": true
    },
    "ua-parser-js": {
      "optional": true
    }
  }
}
