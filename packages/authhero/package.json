{
  "name": "authhero",
  "version": "0.225.0",
  "files": [
    "dist"
  ],
  "main": "dist/authhero.cjs",
  "module": "dist/authhero.mjs",
  "types": "dist/authhero.d.ts",
  "exports": {
    ".": {
      "types": "./dist/authhero.d.ts",
      "require": "./dist/authhero.cjs",
      "import": "./dist/authhero.mjs"
    },
    "./styles": {
      "import": "./dist/tailwind.css",
      "require": "./dist/tailwind.css"
    }
  },
  "scripts": {
    "dev": "bun --watch src/bun.ts",
    "build": "pnpm build:tailwind && tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "build:tailwind": "node build-tailwind.js",
    "build:vite": "vite build",
    "start": "pnpm build && node dist/index.js",
    "test": "vitest run",
    "pull-translations": "i18nexus pull --path ./src/locales",
    "watch-translations": "i18nexus listen --path ./src/locales"
  },
  "devDependencies": {
    "@ape-egg/tailwind-rows-columns": "^1.0.2",
    "@authhero/kysely-adapter": "workspace:^",
    "@hono/zod-openapi": "^1.1.3",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.5.2",
    "autoprefixer": "10.4.21",
    "better-sqlite3": "^12.4.1",
    "cssnano": "7.1.1",
    "dts-bundle-generator": "^9.5.1",
    "hono": "^4.9.8",
    "i18nexus-cli": "^3.8.2",
    "kysely": "^0.28.7",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "@authhero/adapter-interfaces": "workspace:^",
    "@peculiar/x509": "^1.14.0",
    "arctic": "3.7.0",
    "bcryptjs": "^3.0.2",
    "check-password-strength": "^3.0.0",
    "classnames": "^2.5.1",
    "fast-xml-parser": "^5.2.5",
    "i18next": "^25.5.2",
    "libphonenumber-js": "^1.12.22",
    "nanoid": "^5.1.6",
    "oslo": "^1.2.1",
    "xml-crypto": "^6.1.2",
    "zod": "^4.0.0"
  },
  "peerDependencies": {
    "@hono/zod-openapi": "^1.1.3",
    "hono": "^4.8.7"
  }
}
