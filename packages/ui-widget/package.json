{
  "name": "@authhero/widget",
  "version": "0.9.0",
  "description": "Server-Driven UI widget for AuthHero authentication flows",
  "repository": {
    "type": "git",
    "url": "https://github.com/markusahlstrand/authhero",
    "directory": "packages/ui-widget"
  },
  "files": [
    "dist/",
    "hydrate/",
    "loader/"
  ],
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "es2015": "./dist/esm/index.js",
  "es2017": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "collection": "./dist/collection/collection-manifest.json",
  "exports": {
    ".": "./dist/index.js",
    "./hydrate": {
      "types": "./hydrate/index.d.ts",
      "import": "./hydrate/index.mjs",
      "require": "./hydrate/index.js"
    },
    "./loader": "./loader/index.js",
    "./dist/esm/loader.js": "./dist/esm/loader.js",
    "./server": {
      "import": "./dist/collection/server/index.js",
      "types": "./dist/types/server/index.d.ts"
    },
    "./types": {
      "import": "./dist/collection/types/components.js",
      "types": "./dist/types/types/components.d.ts"
    }
  },
  "scripts": {
    "build": "stencil build",
    "dev": "concurrently \"stencil build --dev --watch\" \"tsx watch demo-server/server.ts\"",
    "demo": "tsx demo-server/server.ts",
    "test": "stencil test --spec",
    "test:watch": "stencil test --spec --watchAll",
    "generate": "stencil generate",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@authhero/adapter-interfaces": "workspace:*"
  },
  "devDependencies": {
    "@hono/node-server": "^1.14.1",
    "@stencil/core": "^4.40.1",
    "@types/jest": "^29.5.14",
    "concurrently": "^9.1.2",
    "hono": "^4.7.10",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "tsx": "^4.19.4"
  },
  "license": "MIT"
}
