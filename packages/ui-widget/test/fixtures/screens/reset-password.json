{
  "screen": "reset-password",
  "title": "Set new password",
  "action": "/api/auth/reset-password",
  "method": "POST",
  "components": [
    {
      "category": "FIELD",
      "type": "HIDDEN",
      "id": "token",
      "config": {
        "value": "reset-token-placeholder"
      }
    },
    {
      "category": "FIELD",
      "type": "PASSWORD",
      "id": "password",
      "label": "New password",
      "required": true,
      "hint": "Must be at least 8 characters",
      "config": {
        "autocomplete": "new-password",
        "min_length": 8
      }
    },
    {
      "category": "FIELD",
      "type": "PASSWORD",
      "id": "password_confirm",
      "label": "Confirm new password",
      "required": true,
      "config": {
        "autocomplete": "new-password"
      }
    },
    {
      "category": "BLOCK",
      "type": "NEXT_BUTTON",
      "id": "submit",
      "config": {
        "label": "Reset password"
      }
    }
  ]
}
