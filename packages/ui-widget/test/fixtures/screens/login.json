{
  "screen": "login",
  "title": "Sign in to your account",
  "action": "/api/auth/login",
  "method": "POST",
  "components": [
    {
      "category": "FIELD",
      "type": "EMAIL",
      "id": "identifier",
      "label": "Email address",
      "required": true,
      "config": {
        "autocomplete": "email"
      }
    },
    {
      "category": "FIELD",
      "type": "PASSWORD",
      "id": "password",
      "label": "Password",
      "required": true,
      "config": {
        "autocomplete": "current-password"
      }
    },
    {
      "category": "BLOCK",
      "type": "NEXT_BUTTON",
      "id": "submit",
      "config": {
        "label": "Sign in"
      }
    }
  ],
  "links": [
    { "id": "forgot-password", "text": "Forgot password?", "href": "/forgot-password" },
    { "id": "signup", "text": "Create account", "href": "/register" }
  ]
}
