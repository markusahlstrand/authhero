{
  "screen": "forgot-password",
  "title": "Reset your password",
  "action": "/api/auth/forgot-password",
  "method": "POST",
  "components": [
    {
      "category": "BLOCK",
      "type": "RICH_TEXT",
      "id": "info",
      "config": {
        "content": "Enter your email address and we'll send you a link to reset your password."
      }
    },
    {
      "category": "FIELD",
      "type": "EMAIL",
      "id": "identifier",
      "label": "Email address",
      "required": true,
      "config": {
        "autocomplete": "email"
      }
    },
    {
      "category": "BLOCK",
      "type": "NEXT_BUTTON",
      "id": "submit",
      "config": {
        "label": "Send reset link"
      }
    }
  ],
  "links": [
    { "id": "back", "text": "Back to login", "href": "/login" }
  ]
}
